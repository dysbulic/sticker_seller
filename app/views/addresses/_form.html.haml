= form_for @address do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :primary
    = f.text_field :primary
  .field
    = f.label :secondary
    = f.text_field :secondary
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :post_code
    = f.text_field :post_code
  .field
    = f.label :country
    = f.text_field :country
  .actions
    = f.submit 'Save'
