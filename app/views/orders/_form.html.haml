= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :cost
    = f.text_field :cost
  .actions
    = f.submit 'Save'
