= form_for @sticker do |f|
  - if @sticker.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sticker.errors.count, "error")} prohibited this sticker from being saved:"
      %ul
        - @sticker.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :quantity
    = f.number_field :quantity
  .actions
    = f.submit 'Save'
